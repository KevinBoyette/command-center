#!/usr/bin/env bash

apps=(MailMate
      Slack
      Dash
      "Fantastical 2"
      CloudApp
     )

start_mac() {
  echo "Starting all apps"
  for i in "${apps[@]}" ; do
    echo "Opening $i"
    open -a "$i"
  done
  cd ~/dev-machine
  vagrant up
}

start_linux() {
  # just in case :-)
  pkill -9 -f emacs
  pkill -9 -f tmux
  # ...and then
  emacsd
  ssh-add ~/.ssh/id_rsa
  keychain ~/.ssh/id_rsa

  pgrep -f tmux
  if [[ "$?" == "1" ]] ; then
    tmux
  else
    tmuxt att
  fi
}

start() {
  if [[ "$(uname)" == "Darwin" ]] ; then
    start_mac
  else
    start_linux
  fi
}


stop() {
  if [[ "$(uname)" == "Darwin" ]] ; then
    echo "Stopping all apps"
    for i in "${apps[@]}" ; do
      echo "Killing $i"
      pkill -f "$i"
    done

    cd ~/dev-machine
    vagrant suspend
  fi
}


main() {
  if [[ "$1" = "start" ]] ; then
    start
  elif [[ "$1" = "stop" ]] ; then
    stop
  else
    echo "usage: work-tools start|stop"
  fi
}


main "$*"
