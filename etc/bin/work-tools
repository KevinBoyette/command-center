#!/usr/bin/env bash

apps=(MailMate
 iTerm
 Docker
 Emacs
 "Fantastical 2"
 Todoist)

start() {
  echo "Starting all apps"
  for i in "${apps[@]}" ; do
    echo "Opening $i"
    open -a "$i"
  done
}


stop() {
    echo "Stopping all apps"
    echo open -a "$i"
    for i in "${apps[@]}" ; do
    echo "Killing $i"
    pkill -f "$i"
  done
  }


main() {
  if [[ "$1" = "start" ]] ; then
    start
  elif [[ "$1" = "stop" ]] ; then
    stop
  else
    echo "usage: work-tools start|stop"
  fi
}


main "$*"
